<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AlPay</display-name>
  <welcome-file-list>
    <welcome-file>main.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>isLog4jAutoInitializationDisabled</param-name>
    <param-value>true</param-value>
  </context-param>
  <resource-ref>
    <description>MySQL DB Connection Pool</description>
    <res-ref-name>jdbc/alpay_system</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>AuthorizationServlet</servlet-name>
    <servlet-class>alaska.web.servlets.AuthorizationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorizationServlet</servlet-name>
    <url-pattern>/autorization</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LocaleServlet</servlet-name>
    <servlet-class>alaska.web.servlets.LocaleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LocaleServlet</servlet-name>
    <url-pattern>/lang</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserHomeServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.UserHomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserHomeServlet</servlet-name>
    <url-pattern>/user_home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminHomeServlet</servlet-name>
    <servlet-class>alaska.web.servlets.admin.AdminHomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminHomeServlet</servlet-name>
    <url-pattern>/admin_home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>alaska.web.servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BlockingServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.BlockingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BlockingServlet</servlet-name>
    <url-pattern>/user_cardblocking</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UnblockingServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.UnblockingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UnblockingServlet</servlet-name>
    <url-pattern>/user_cardunblocking</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PaymentServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.PaymentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentServlet</servlet-name>
    <url-pattern>/user_payment</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReplenishServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.ReplenishServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReplenishServlet</servlet-name>
    <url-pattern>/user_replenish</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddServlet</servlet-name>
    <servlet-class>alaska.web.servlets.user.CardAddingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddServlet</servlet-name>
    <url-pattern>/user_cardAdding</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/views/util/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/view/error/error.jsp</location>
  </error-page>
</web-app>